<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Universiteit Twente Documentatie" %></title>
    
    <%= stylesheet_link_tag  "bootstrap", "bootstrap-docs", "bootstrap-responsive", "prettify", "flat-ui", "normalize", "all" %>
    <%= javascript_include_tag  "all" %>
  </head>
  
  <body class="<%= page_classes %>">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
          <div class="container">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </a>
              <div class="nav-collapse collapse">
                <ul class="nav">
                    <li><a href = "#">Home</a></li>
                    <li><a href = "#">Contribute</a></li>
                </ul>
              </div>
          </div>
        </div>
    </div>
    <div class="container-fluid content">
      <div class="row-fluid">
          <div class="span2 hidden-phone">
            <!-- Chapter menu -->
            <ul class='nav nav-list'>
              <li class='nav-header'>Docs</li>
              <li ><a href="example.html">Template</a></li>
            </ul>
          </div>
          <div class="span10">
            <!-- Load the markdown documentation -->
            <%= yield %>
          <div>
      </div>
    </div>
  </body>
</html>